{
  "homepage": ".",
  "name": "clinic-widget",
  "version": "1.0.0",
  "description": "A small room status widget for the clinic network.",
  "author": "Clinic Admin",
  "private": true,
  "main": "main.js",
  "dependencies": {
    "axios": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "socket.io-client": "^4.7.0",
    "web-vitals": "^5.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.clinic.widget",
    "productName": "ClinicStatus",
    "extends": null,
    "files": [
      "build/**/*",
      "main.js"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^39.2.7"
  }
}
